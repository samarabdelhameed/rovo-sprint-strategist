# ===========================================
# ROVO SPRINT STRATEGIST - ENVIRONMENT CONFIG
# ===========================================

# ⚠️ IMPORTANT: AI API Keys are OPTIONAL!
# The app uses Rovo AI (built into Atlassian) by default.
# External AI is only needed for advanced features.

# ===========================================
# AI CONFIGURATION (OPTIONAL - for advanced features only)
# ===========================================

# Demo Mode - Set to true to use mock AI responses (FREE!)
# Perfect for hackathon demo and testing
DEMO_MODE=true

# AI Provider (only if DEMO_MODE=false)
# Options: rovo (default), anthropic, openai
AI_PROVIDER=rovo

# External AI Keys (OPTIONAL - only if you want external AI)
# Leave empty to use Rovo AI or Demo Mode
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ===========================================
# ALERT CONFIGURATION
# ===========================================

# Health score threshold for alerts (0-100)
ALERT_THRESHOLD=60

# Stuck task threshold (days)
STUCK_TASK_DAYS=2

# Overload threshold (percentage)
OVERLOAD_THRESHOLD=100

# ===========================================
# VELOCITY PREDICTION
# ===========================================

# Number of past sprints to consider for velocity
VELOCITY_LOOKBACK_SPRINTS=3

# Minimum confidence for predictions (0-1)
MIN_PREDICTION_CONFIDENCE=0.7

# ===========================================
# GAMIFICATION
# ===========================================

# Enable team leaderboard
ENABLE_GAMIFICATION=true

# Points per completed story point
POINTS_PER_STORY_POINT=10

# Points for meeting estimation
ESTIMATION_BONUS=50

# ===========================================
# NOTIFICATIONS
# ===========================================

# Enable Slack notifications (future feature)
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=

# Enable email notifications (future feature)
ENABLE_EMAIL_NOTIFICATIONS=false

# ===========================================
# DEVELOPMENT
# ===========================================

# Debug mode (verbose logging)
DEBUG_MODE=true

# Log level: error, warn, info, debug
LOG_LEVEL=info
