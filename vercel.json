{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "public": true,
    "builds": [
        {
            "src": "api/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "static/dashboard/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/server.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/static/dashboard/build/assets/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/static/dashboard/build/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ]
        }
    ]
}